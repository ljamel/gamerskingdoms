{# src/OC/PlatformBundle/Resources/views/Advert/add.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block body %}

{% for message in messages %}

{% if message.authorpoints > 0 %}
<p>Mettre à jour mes statistiques pour ce matche</p>
<form action="{{ path('oc_platform_editstat', {'id': message.id}) }}" method="post">
  Matches perdu: <input type="text" name="userreceivedpoints"><br>
  Matches gagner: <input type="text" name="authorpoints"><br>
  <input type="submit" value="Submit">
</form>
<br />
{% endif %}
<h2>{{ message.title }}</h2><br />
Message
<p>

<a href="{{ path('oc_platform_postprivate', {'id': message.author}) }}">Répondre au message</a>
{% autoescape %}
{{ message.content|raw }}<br />
Auteur
{{ message.author }}
</p>
{% endautoescape %}
{% endfor %}

{% endblock %}
